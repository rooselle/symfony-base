root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{php,html,twig}]
indent_size = 4

[*.{css,scss,sass}]
indent_size = 2

[*.{bash,sh,zsh}]
indent_size = 2

[*.{js,ts}]
indent_size = 2

[*.json]
indent_size = 2

[{.babelrc,.eslintrc,.stylelintrc,.bowerrc,jest.config}]
indent_size = 2

[*.{yaml,yml,neon}]
indent_size = 4

[{composer.lock,assets/controllers.json}]
indent_size = 4
