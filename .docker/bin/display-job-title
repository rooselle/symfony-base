#!/bin/sh

ORANGE='\033[33m'
CYAN='\033[94m'
RESET='\033[0m'

printf "\n${ORANGE}****************************************************************\n"
printf "   $1\n"

if [ $# -eq 2 ]; then
    printf "\n   ${CYAN}=> $2\n"
fi

printf "${ORANGE}****************************************************************${RESET}\n\n"
